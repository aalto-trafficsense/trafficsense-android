<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/colorAccent" />
            <stroke
                android:width="2dp"
                android:color="@color/white" />
            <corners
                android:radius="6dp" />
            <padding
                android:left="12dp"
                android:top="12dp"
                android:right="12dp"
                android:bottom="12dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid
                android:color="@color/colorPrimary" />
            <stroke
                android:width="2dp"
                android:color="@color/white" />
            <corners
                android:radius="6dp" />
            <padding
                android:left="12dp"
                android:top="12dp"
                android:right="12dp"
                android:bottom="12dp" />
        </shape>
    </item>
</selector>