<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/colorRunning" />
            <stroke
                android:width="2dp"
                android:color="@color/white" />
            <corners
                android:radius="6dp" />
            <padding
                android:left="4dp"
                android:top="0dp"
                android:right="4dp"
                android:bottom="0dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="@color/colorWalking"
                android:endColor="@color/colorOnBicycle"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="@color/white" />
            <corners
                android:radius="6dp" />
            <padding
                android:left="4dp"
                android:top="0dp"
                android:right="4dp"
                android:bottom="0dp" />
        </shape>
    </item>
</selector>