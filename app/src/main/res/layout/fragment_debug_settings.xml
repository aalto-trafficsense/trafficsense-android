<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".ui.DebugSettingsFragment">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".ui.DebugActivity">

        <!-- Service State -->
        <TableLayout android:id="@+id/conf_ServiceStatusTable"
                     android:layout_width="fill_parent"
                     android:layout_height="wrap_content"
                     android:background="@drawable/border"
                     android:padding="3dp"
                     android:layout_alignParentLeft="true"
                     android:layout_alignParentStart="true">
            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/service_state_label"/>

                <TextView android:id="@+id/debug_setting_ServiceStateIndicator"
                          style="@android:style/TextAppearance.Medium"
                          android:text="@string/debug_settings_initialServiceStatus"
                          android:textStyle="bold"
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:textColor="@color/black"
                          android:background="@color/white"
                          android:layout_weight="2"
                          android:gravity="end"/>
            </TableRow>
            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/debug_settings_ToggleService"/>

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/debug_settings_ToggleServiceSwitch"
                    android:layout_weight="2"
                    android:gravity="end"
                    android:checked="true"
                    android:foregroundTint="#4caf50"
                    android:textOn="On"
                    android:textOff="Off"
                    android:showText="true"
                    android:splitTrack="false"
                    android:switchMinWidth="60sp"/>
            </TableRow>
        </TableLayout>

    </RelativeLayout>
</FrameLayout>
