<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/path_edit_layout"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="16dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="horizontal"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content">

        <TextView android:text="@string/path_edit_activity"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  style="@android:style/TextAppearance.Small"
                  android:textColor="@color/black"/>
        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/path_edit_activity_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:id="@+id/path_edit_line_name_layout"
                  android:orientation="horizontal"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content">

        <TextView android:text="@string/path_edit_line_name"
                  android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  style="@android:style/TextAppearance.Small"
                  android:textColor="@color/black"
                  android:gravity="center_vertical"
                  android:paddingRight="12dp"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="8"
            android:id="@+id/path_edit_line_name_input"/>
    </LinearLayout>


</LinearLayout>